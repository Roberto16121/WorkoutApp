<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.XAML.Parts.StepsCircleUI">
    <Grid  WidthRequest="135" HeightRequest="135">
        <Ellipse Stroke="Gray" StrokeThickness="10"/>
        <Ellipse x:Name="ProgressCircle" Stroke="LightGreen" StrokeThickness="10"/>
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center">
            <Label x:Name = "CurrentSteps"
                   Text="99999" FontSize="20"
                   TextColor="Black" HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
            
            <Line  WidthRequest="75"
                   BackgroundColor="Black"
                   HeightRequest="3"/>
            
            <Label x:Name = "GoalSteps"
                   Text="99999" FontSize="20"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
